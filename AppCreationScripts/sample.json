{
  /*
  This section describes the Azure AD  Applications to configure, and their dependencies
  */
  "Sample": {
    "Title": "Call a downstream web API (Microsoft Graph) from a web API secured with Microsoft identity platform using the On-Behalf-Of flow",
    "Level": 400,
    "Client": ".NET Framework Desktop, JavaScript SPA",
    "Service": "ASP.NET Web API, Microsoft Graph API",
    "RepositoryUrl": "ms-identity-aspnet-webapi-onbehalfof",
    "Endpoint": "AAD v2.0"
  },
  "AADApps": [
    {
      "Id": "service",
      "Name": "TodoListService-OBO-sample-v2",
      "Kind": "WebApi",
      "HomePage": "https://localhost:44321/",
      "PasswordCredentials": "Auto",
      "RequiredResourcesAccess": [
        {
          "Resource": "Microsoft Graph",
          "DelegatedPermissions": [ "User.Read" ]
        }
      ]
    },
		{
      "Id": "client",
      "Kind": "Desktop",
			"Name": "TodoListClient-OBO-sample-v2",
      "ReplyUrls": "https://login.microsoftonline.com/common/oauth2/nativeclient",
			"RequiredResourcesAccess": [
				{
					"Resource": "service",
					"DelegatedPermissions": [ "access_as_user" ]
				}
			]
    },
    {
      "Id": "spa",
      "Kind": "SinglePageApplication",
      "Name": "TodoListSPA-OBO-sample-v2",
      "HomePage": "https://localhost:44377/",
      "ReplyUrls":"https://localhost:44377",
      "RequiredResourcesAccess": [
        {
          "Resource": "service",
          "DelegatedPermissions": [ "access_as_user" ]
        }
      ]
    }
  ],

/*
    This section describes how to update (the code in configuration files) from the apps coordinates
   Each section describes a configuration file, for one of the apps, it's type (XML, JSon, plain text), its location
   with respect to the root of the sample, and the mappping (which string in the config file is mapped to which value
*/
  "CodeConfiguration": [
    {
      "App": "service",
      "SettingKind": "XML",
      "SettingFile": "\\..\\TodoListService\\Web.Config",
      "Mappings": [
        {
          "key": "ida:Tenant",
          "value": "$tenantName"
        },
        {
          "key": "ida:Audience",
          "value": "$serviceIdentifierUri"
        },
        {
          "key": "ida:AppKey",
          "value": "$serviceAppKey"
        },
        {
          "key": "ida:ClientID",
          "value": "service.AppId"
        }
      ]
    },

    {
      "App": "client",
      "SettingKind": "XML",
      "SettingFile": "\\..\\TodoListClient\\App.Config",
      "Mappings": [
        {
          "key": "ida:Tenant",
          "value": "$tenantName"
        },
        {
          "key": "ida:ClientId",
          "value": "client.AppId"
        },
        {
          "key": "todo:TodoListScope",
          "value": "$serviceIdentifierUri'/.default'"
        },
        {
          "key": "todo:TodoListBaseAddress",
          "value": "service.HomePage"
        }
      ]
    },

    {
      "App": "spa",
      "SettingKind": "Text",
      "SettingFile": "\\..\\TodoListSPA\\appconfig.js",
      "Mappings": [
        {
          "key": "tenant",
          "value": "$tenantName"
        },
        {
          "key": "clientId",
          "value": ".AppId"
        },
        {
          "key": "redirectUri",
          "value": ".HomePage"
        },
        {
          "key": "resourceId",
          "value": "$serviceIdentifierUri"
        },
        {
          "key": "resourceBaseAddress",
          "value": "service.HomePage"
        },
        {
          "key": "webApiScope",
          "value": "$serviceIdentifierUri+\"/.default\""
        },
        {
          "key": "authority",
          "value": "\"https://login.microsoftonline.com/\"+$tenantName"
        }
      ]
    }
  ]
}
